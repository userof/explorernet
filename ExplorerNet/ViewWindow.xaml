    Title="ViewWindow" Height="300" Width="599">
    <Grid>
        <ScrollViewer Margin="12,61,12,21">
            <StackPanel Name="spMain" />
        </ScrollViewer>

        <Button Height="23" HorizontalAlignment="Left" Margin="12,12,0,0" Name="btnAddLevel" VerticalAlignment="Top" Width="75" Click="btnAddLevel_Click">Add Level</Button>
        <Button Height="23" Margin="101,12,0,0" Name="btnSettings" VerticalAlignment="Top" Click="btnSettings_Click"  HorizontalAlignment="Left" Width="75">Settings</Button>
        <Button Height="23" HorizontalAlignment="Left" Margin="194,12,0,0" Name="btnSaveTemplate" VerticalAlignment="Top" Width="87" Click="btnSaveTemplate_Click">Save Template</Button>
        <Button Height="23" HorizontalAlignment="Left" Margin="296,12,0,0" Name="btnLoadTemplate" VerticalAlignment="Top" Width="84" Click="btnLoadTemplate_Click">Load Template</Button>
    </Grid>
</Window>
