            <!--<vw:PreviewPanel x:Name="ppPreview" />-->
            <fa:PreviewPanel x:Name="ppPreview" />
        </Grid>
            <Thumb Margin="0,0,0,0" Grid.Column="1" Name="tmbMove" Cursor="SizeWE" DragDelta="tmbMove_DragDelta" 
                    HorizontalAlignment="Right" Width="4" />
        
        </Grid>



