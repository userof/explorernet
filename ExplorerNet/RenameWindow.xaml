<Window x:Class="ExplorerNet.RenameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Closed="Window_Closed"
        Title="{DynamicResource RWWindowTitle}" mc:Ignorable="d" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        Width="183" Height="130">
    <StackPanel>
        <TextBlock Name="txtDescription" Margin="5,5,5,5"
                   Text="{DynamicResource RWRename}" />
        <TextBox Name="txtName" Margin="5,0,5,5" />
        <StackPanel Height="26" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Name="btnOk" IsDefault="True" Margin="10,0,10,0"
                    Click="btnOk_Click">
                <TextBlock Margin="14,0,14,0" Text="{DynamicResource RWOk}" />
            </Button>
            <Button Name="btnCancel" IsCancel="True" Margin="0,0,10,0">
                <TextBlock Margin="14,0,14,0" Text="{DynamicResource RWCancel}" />
            </Button> 
                   
        </StackPanel>
    </StackPanel>
</Window>
