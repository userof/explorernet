<Application x:Class="ExplorerNet.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:local="clr-namespace:ExplorerNet.ViewWindowApps"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <Style TargetType="{x:Type local:LanguageSelector}" BasedOn="{StaticResource {x:Type Button}}"/>
                </ResourceDictionary>
                <ResourceDictionary Source="Languages/en.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!--<ResourceDictionary.MergedDictionaries>BasedOn="{StaticResource {x:Type Button}
                <ResourceDictionary Source="SunnyOrange_Theme.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>-->
        </ResourceDictionary>
    </Application.Resources>
</Application>
